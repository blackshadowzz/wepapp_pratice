@model IEnumerable<WebAppWeek01.Models.Position>


@{
    ViewData["Title"] = "Index";
}

<h3>Position List</h3>
<p>
    <a asp-action="Create" class="btn btn-outline-primary" >Create New</a>
</p>
<table class="table table-hover shadow">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th> 
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th style="width:15%">Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="bi bi-pen"></a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="bi bi-eye"></a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="bi bi-trash"></a>
            </td>
        </tr>
}
    </tbody>
</table>



