@{

    var hello = "Hello World to Khoding Space!";
    var days = DateTime.Now.DayOfWeek;
    var time = DateTime.Now;

}

<div class="container">
    @{

        var dep = new Department()
        {
            Name = "IT",
            Description = "It Department"
        };
    }
    <h4>@hello</h4>
    <h5>@days @time</h5>
    <h1 style="font-size:80px;text-align:center;
                padding:20px;
                " class="shadow mt-4">@DateTime.Now</h1>
    <table class="table">
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
        </tr>
        <tr>
            <td>
                @dep.Name
            </td>
            <td>
                @dep.Description
            </td>
        </tr>
    </table>
</div>


